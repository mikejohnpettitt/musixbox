
<div class="container-100 d-flex flex-column">

  <div class="flex-grow-1 overflow-auto p-3">


      <h1 class="text-center mb-3">Your results</h1>
      <div class="text-center mb-3">
        <div class="purple-theme display-1 fw-bold"><%= @percentage %>%</div>
        <div class="fs-5 text-muted">
          <span class="fw-semibold"><%= @score %></span> correct answers out of  <%= @max_score %>
        </div>
      </div>


      <% if @percentage > 80 %>
        <div class="border border-warning border-4 rounded-4 p-3 bg-warning-subtle">
          <h2 class="text-center text-warning fw-bolder">ğŸ† Achievement unlocked ğŸ†</h2>
          <h3 class="text-center fw-bolder display-4">Ace of <%= @playlist.title %></h3>

          <%# Affiche "Perfect score!" seulement si 100% %>
          <% if @percentage == 100 %>
            <p class="text-warning text-center fs-4">Perfect score!</p>
          <% end %>
        </div>
      <% end %>


    <% if @fastest_title %>
    <div class="mt-3 text-center">
      <h2>Fastest guess: </h5>
      <p class="display-6">
        <% if @fastest_title.song %>
          <%= @fastest_title.song.artist %>
          - <%= @fastest_title.song.title %>
        <% end %>
      </p>
      <p class="fst-italic">
        - guessed in <%= (@fastest_title.time_taken / 1000.0).round(2) %> sec
      </p>
    </div>
    <% end %>


  </div>
</div>

  <div class="bottom-buttons d-flex container-15">
    <%= link_to share_card_play_session_path(@user_session),
              class: "button-left w-50 bg-orange-theme" do %>
    Share results
    <% end %>
    <%= link_to play_session_results_share_path(@user_session), class: "button-right w-50 bg-yellow-theme" do %>
      Add selfie
    <% end %>
  </div>
