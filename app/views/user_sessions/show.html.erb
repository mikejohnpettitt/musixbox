<%= content_for :head do %>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
<style>
  :root {
    --primary: #F97316;
    --secondary: #FACC15;
    --accent: #F97316;
    --orange: #F97316;
    --yellow: #FACC15;
    --bg: #FFF7ED;
    --black: #1a1a1a;
  }

  * {
    font-family: 'Space Grotesk', sans-serif;
  }

  body {
    -webkit-tap-highlight-color: transparent;
    background: var(--bg);
  }

  .bg-show {
    background: var(--bg);
    min-height: 100vh;
    min-height: 100dvh;
    padding-top: calc(4.5rem + env(safe-area-inset-top, 0px));
  }

  /* Progress bar - SUR la vidéo, en haut */
  #progress_bar {
    position: fixed;
    top: 5rem;
    left: 1rem;
    right: 1rem;
    z-index: 50 !important;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 0.5rem;
    border-radius: 10px;
    border: 2px solid var(--black);
    box-shadow: 3px 3px 0 var(--black);
  }

  .progress-brutal {
    height: 10px;
    background: #e5e5e5;
    border: 2px solid var(--black);
    border-radius: 5px;
    overflow: hidden;
  }

  .progress-brutal-fill {
    background: var(--orange);
    height: 100%;
  }

  .progress-brutal-empty {
    background: #e5e5e5;
    height: 100%;
  }

  .progress-text {
    color: var(--black);
    font-weight: 700;
    font-size: 0.8rem;
  }

  /* Feedback - SUR la vidéo, carré petit */
  .feedback-over {
    position: fixed;
    top: 9rem;
    left: 1rem;
    z-index: 100 !important;
    background: white;
    border: 2px solid var(--black);
    border-radius: 10px;
    box-shadow: 3px 3px 0 var(--black);
    padding: 0.5rem;
    text-align: center;
    width: 100px;
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .feedback-over h2 {
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.25rem;
    font-size: 0.7rem;
  }

  .feedback-over div {
    font-weight: 600;
    color: var(--black);
    margin-bottom: 0.1rem;
    font-size: 0.55rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 90px;
  }

  .feedback-over[data-success="true"] {
    background: #d4edda;
  }

  .feedback-over[data-success="false"] {
    background: #fff3cd;
  }

  /* Buzzer */
  .buzzer {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    background: var(--orange);
    border: 4px solid var(--black);
    box-shadow: 8px 8px 0 var(--black);
    transition: all 0.15s ease;
  }

  .buzzer:active {
    transform: translate(4px, 4px);
    box-shadow: 4px 4px 0 var(--black);
  }

  /* Form */
  .form-title {
    font-weight: 700;
    color: var(--black);
    font-size: 1.5rem;
  }

  .form-input {
    background: white;
    border: 3px solid var(--black);
    border-radius: 12px;
    padding: 0.75rem 1rem;
    font-weight: 500;
    color: var(--black);
    width: 100%;
    box-shadow: 4px 4px 0 var(--black);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--orange);
  }

  .btn-go {
    background: var(--orange);
    color: white;
    border: 3px solid var(--black);
    box-shadow: 5px 5px 0 var(--black);
    font-weight: 700;
    font-size: 1.1rem;
    padding: 0.75rem 2rem;
    border-radius: 12px;
    transition: all 0.15s ease;
    text-transform: uppercase;
  }

  .btn-go:active {
    transform: translate(3px, 3px);
    box-shadow: 2px 2px 0 var(--black);
  }

  /* Next button */
  .btn-next {
    background: var(--yellow);
    color: var(--black);
    border: 3px solid var(--black);
    box-shadow: 5px 5px 0 var(--black);
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.15s ease;
    text-transform: uppercase;
    max-width: 320px;
  }

  .btn-next:active {
    transform: translate(3px, 3px);
    box-shadow: 2px 2px 0 var(--black);
  }

  /* Thumbs up image */
  .welldone-img {
    max-width: 200px;
  }

  /* Decorative shapes - hidden on small screens */
  .shape-1, .shape-2 {
    display: none;
  }

  @media (min-width: 500px) {
    .shape-1 {
      display: block;
      position: absolute;
      width: 50px;
      height: 50px;
      background: var(--yellow);
      border: 3px solid var(--black);
      border-radius: 12px;
      top: 15%;
      right: 5%;
      transform: rotate(15deg);
      z-index: 0;
    }

    .shape-2 {
      display: block;
      position: absolute;
      width: 35px;
      height: 35px;
      background: var(--orange);
      border: 3px solid var(--black);
      border-radius: 50%;
      bottom: 20%;
      left: 5%;
      z-index: 0;
    }

    .buzzer {
      width: 200px;
      height: 200px;
    }
  }
</style>
<% end %>

<% questions = Question.where(session_id: @user_session.session_id).order(:id) %> 
<% total_questions = questions.count %>
<% current_index = questions.find_index { |q| q.id == @current_question.id }.to_i + 1 %>

<!-- Progress bar - SUR la vidéo -->
<div id="progress_bar">
  <div class="d-flex gap-2 mb-1">
    <% (1..total_questions).each do |i| %>
      <div class="progress-brutal flex-grow-1">
        <% if i <= current_index %>
          <div class="progress-brutal-fill"></div>
        <% else %>
          <div class="progress-brutal-empty"></div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="text-center progress-text">
    <span><%= current_index %> / <%= total_questions %></span>
  </div>
</div>

<div class="bg-show position-relative overflow-hidden d-flex flex-column px-3 py-4" data-controller="youtube toggle">
  
  <div class="shape-1"></div>
  <div class="shape-2"></div>

  <!-- Video -->
  <%= turbo_frame_tag "question" do %>
    <div class="mb-4 position-relative" style="z-index: 1;">
      <%= render "questions/video", question: @current_question %>
    </div>
  <% end %>

  <!-- Buzzer -->
  <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center position-relative" style="z-index: 5;">
    <%= link_to "#", data: { action: "click->youtube#pause click->toggle#buzz" }, class: "text-decoration-none" do %>
      <div class="buzzer d-flex justify-content-center align-items-center" data-toggle-target="buzzer">
        <%= image_tag "Logo sans nom 2.png", style: "width: 100px;" %>
      </div>
    <% end %>
  </div>

  <!-- Form -->
  <div data-controller="counter" class="position-relative" style="z-index: 5;">
    <div data-toggle-target="form" class="d-none text-center py-4">
      <h2 class="form-title mb-4">Take your guess!</h2>
      <%= simple_form_for @current_question, data: {
                      action: "submit->counter#saveTime turbo:submit-end->toggle#submitted" } do |f| %>
        <%= f.hidden_field :time_taken, data: { counter_target: "input" } %>
        <div class="mb-3">
          <%= f.input :user_answer_artist, placeholder: "Artist", label: false, input_html: { class: "form-input" } %>
        </div>
        <div class="mb-4">
          <%= f.input :user_answer_title, placeholder: "Title", label: false, input_html: { class: "form-input" } %>
        </div>
        <%= f.submit "Go!", class: "btn-go" %>
      <% end %>
    </div>
  </div>

  <!-- Feedback -->
  <turbo-frame id="feedback_content" class="position-relative" style="z-index: 5;">
  </turbo-frame>

  <!-- Well done -->
  <div class="d-none d-flex justify-content-center align-items-center py-4 position-relative" style="z-index: 5;" data-toggle-target="welldone">
    <%= image_tag "thumbsup.png", class: "welldone-img" %>
  </div>

  <!-- Next button -->
  <div class="d-flex justify-content-center mt-auto pt-3 position-relative" style="z-index: 5;">
    <%= link_to play_session_path(@user_session, current_question: @current_question),
                class: "btn-next w-100 py-3 rounded-3 text-center text-decoration-none" do %>
      Next →
    <% end %>
  </div>

</div>
