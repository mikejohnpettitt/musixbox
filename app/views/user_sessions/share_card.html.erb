
<head>
  <title>Share Card - MusixBox</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <style>
    /* UNIQUEMENT pour cacher les √©l√©ments inutiles */
    header, footer, nav, .navbar { display: none !important; }

    /* Pour impression/screenshot propre */
    @media print {
      .no-print { display: none !important; }
    }
  </style>
</head>
<body class="bg-gradient d-flex align-items-center min-vh-100">

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">

        <%= render "shared/card" %>

         <!-- BOUTON SIMPLE POUR PARTAGE -->
        <div class="text-center mt-4">
          <button onclick="shareResults()" class="btn btn-primary btn-lg">
            üì§ Partager mes r√©sultats
          </button>
        </div>


      </div> 

    </div>
  </div>
 <script>
    function shareResults() {
      // Action simple de partage
      if (navigator.share) {
        // Partager sur mobile
        navigator.share({
          title: 'Mes r√©sultats MusixBox',
          text: 'J\'ai termin√© ma session sur MusixBox ! üéµ',
          url: window.location.href
        });
      } else {
        // Copier le lien sur desktop
        navigator.clipboard.writeText(window.location.href)
          .then(() => alert('Lien copi√© ! Collez-le pour partager.'));
      }
    }
  </script>


</body>
