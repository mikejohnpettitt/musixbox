<div class="card-result text-center">
  <!-- Image de fond -->
  <img class="card-image" src="<%= asset_path('and_the_winner_is.png') %>" alt="photos">

  <!-- Photo utilisateur -->
  <img id="userPhoto" data-camera-target="cardPhoto" alt="Your photo">

  <!-- Overlay avec stats -->
  <div class="card-overlay">

    <% if @percentage > 80 %>
      <div class="trophy-card">
        <h3 class="trophy-title">ğŸ† Ace of <%= @playlist.title %> ğŸ†</h3>
        <% if @percentage == 100 %>
          <p class="trophy-perfect">Perfect score!</p>
        <% end %>
      </div>
    </div>
    <% end %>

    <% if @fastest_title %>
      <div class="fastest-card">
        <div class="fastest-label">ğŸ¯ Fastest guess</div>
        <div class="fastest-time"><%= (@fastest_title.time_taken / 1000.0).round(2) %> sec</div>
        <% if @fastest_title.song %>
          <div class="fastest-song"><%= @fastest_title.song.title %></div>
        <% end %>
      </div>
    <% end %>

    <div class="card-footer">
      <span>ğŸ¸ MusixBox</span>
      <span>musixbox.com</span>
    </div>

  </div>
</div>

<script>
  function loadUserPhoto() {
    const savedPhoto = localStorage.getItem("userSelfie")
    const userPhotoElement = document.getElementById("userPhoto")
    const backgroundImage = document.querySelector(".card-result .card-image")

    if (savedPhoto && userPhotoElement) {
      userPhotoElement.src = savedPhoto
      userPhotoElement.style.display = "block"
      if (backgroundImage) {
        backgroundImage.style.opacity = "0"
      }
    }
  }

  document.addEventListener("DOMContentLoaded", loadUserPhoto)
  document.addEventListener("turbo:load", loadUserPhoto)
</script>
