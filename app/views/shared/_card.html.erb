<style>
  .card-result {
    position: relative;
    width: 100%;
    background: white;
    border: 3px solid #1a1a1a;
    border-radius: 12px;
    box-shadow: 5px 5px 0 #1a1a1a;
    overflow: hidden;
    font-family: 'Space Grotesk', sans-serif;
  }

  .card-result .card-image {
    width: 100%;
    display: block;
    opacity: 0.7;
  }

  .card-result #userPhoto {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
  }

  .card-result .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(to top, rgba(255, 247, 237, 0.95), rgba(255, 247, 237, 0));
  }

  .card-result .trophy-card {
    background: #FACC15;
    border: 2px solid #1a1a1a;
    border-radius: 10px;
    box-shadow: 3px 3px 0 #1a1a1a;
    padding: 0.75rem;
    text-align: center;
    margin-bottom: 0.75rem;
  }

  .card-result .trophy-title {
    font-weight: 700;
    color: #1a1a1a;
    font-size: 0.9rem;
    margin: 0;
  }

  .card-result .trophy-perfect {
    font-weight: 700;
    color: #1a1a1a;
    font-size: 0.8rem;
    margin: 0.25rem 0 0 0;
  }

  .card-result .fastest-card {
    background: white;
    border: 2px solid #1a1a1a;
    border-radius: 10px;
    box-shadow: 3px 3px 0 #1a1a1a;
    padding: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .card-result .fastest-label {
    font-weight: 700;
    color: #1a1a1a;
    font-size: 0.85rem;
    margin-bottom: 0.25rem;
  }

  .card-result .fastest-time {
    font-weight: 700;
    color: #F97316;
    font-size: 1.1rem;
  }

  .card-result .fastest-song {
    font-weight: 600;
    color: #1a1a1a;
    font-size: 0.75rem;
  }

  .card-result .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: #1a1a1a;
  }
</style>

<div class="card-result text-center">
  <!-- Image de fond -->
  <img class="card-image" src="<%= asset_path('and_the_winner_is.png') %>" alt="photos">

  <!-- Photo utilisateur -->
  <img id="userPhoto" data-camera-target="cardPhoto" alt="Your photo">

  <!-- Overlay avec stats -->
  <div class="card-overlay">

    <% if @percentage > 80 %>
      <div class="trophy-card">
        <h3 class="trophy-title">üèÜ Ace of <%= @playlist.title %> üèÜ</h3>
        <% if @percentage == 100 %>
          <p class="trophy-perfect">Perfect score!</p>
        <% end %>
      </div>
    <% end %>

    <% if @fastest_title %>
      <div class="fastest-card">
        <div class="fastest-label">üéØ Fastest guess</div>
        <div class="fastest-time"><%= (@fastest_title.time_taken / 1000.0).round(2) %> sec</div>
        <% if @fastest_title.song %>
          <div class="fastest-song"><%= @fastest_title.song.title %></div>
        <% end %>
      </div>
    <% end %>

    <div class="card-footer">
      <span>üé∏ MusixBox</span>
      <span>musixbox.com</span>
    </div>

  </div>
</div>

<script>
  function loadUserPhoto() {
    const savedPhoto = localStorage.getItem("userSelfie")
    const userPhotoElement = document.getElementById("userPhoto")
    const backgroundImage = document.querySelector(".card-result .card-image")

    if (savedPhoto && userPhotoElement) {
      userPhotoElement.src = savedPhoto
      userPhotoElement.style.display = "block"
      if (backgroundImage) {
        backgroundImage.style.opacity = "0"
      }
    }
  }

  document.addEventListener("DOMContentLoaded", loadUserPhoto)
  document.addEventListener("turbo:load", loadUserPhoto)
</script>
