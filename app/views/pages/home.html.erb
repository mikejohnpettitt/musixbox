<%= content_for :head do %>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
<style>
  :root {
    --primary: #F97316;
    --secondary: #FACC15;
    --accent: #F97316;
    --orange: #F97316;
    --yellow: #FACC15;
    --bg: #FFF7ED;
    --black: #1a1a1a;
  }

  * {
    font-family: 'Space Grotesk', sans-serif;
  }

  body {
    -webkit-tap-highlight-color: transparent;
    background: var(--bg);
  }

  .bg-blind-test {
    background: var(--bg);
    min-height: 100vh;
    min-height: 100dvh;
    padding-top: calc(5.5rem + env(safe-area-inset-top, 0px));
  }

  /* Title */
  .app-title {
    font-weight: 700;
    color: var(--black);
    letter-spacing: -0.02em;
    font-size: 2.5rem;
  }

  .app-subtitle {
    color: var(--black);
    font-weight: 500;
    display: inline-block;
    padding: 0.25rem 1rem;
    border-radius: 8px;
  }

  /* Play Button */
  .btn-quickplay {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    background: var(--orange);
    border: 4px solid var(--black);
    box-shadow: 8px 8px 0 var(--black);
    transition: all 0.15s ease;
    position: relative;
  }

  .btn-quickplay:active {
    transform: translate(4px, 4px);
    box-shadow: 4px 4px 0 var(--black);
  }

  .btn-quickplay-icon {
    font-size: 3rem;
    color: white;
    margin-left: 8px;
  }

  .btn-quickplay-text {
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.9rem;
    font-weight: 700;
    color: white;
  }

  .btn-quickplay-desc {
    font-size: 0.7rem;
    color: rgba(255,255,255,0.8);
    font-weight: 500;
    margin-top: 0.2rem;
  }

  /* Decorative shapes - hidden on small screens */
  .shape-1, .shape-2, .shape-3 {
    display: none;
  }

  @media (min-width: 500px) {
    .shape-1 {
      display: block;
      position: absolute;
      width: 60px;
      height: 60px;
      background: var(--yellow);
      border: 3px solid var(--black);
      border-radius: 12px;
      top: 20%;
      left: 10%;
      transform: rotate(15deg);
      z-index: 0;
    }

    .shape-2 {
      display: block;
      position: absolute;
      width: 40px;
      height: 40px;
      background: var(--orange);
      border: 3px solid var(--black);
      border-radius: 50%;
      top: 30%;
      right: 15%;
      z-index: 0;
    }

    .shape-3 {
      display: block;
      position: absolute;
      width: 50px;
      height: 50px;
      background: var(--yellow);
      border: 3px solid var(--black);
      bottom: 25%;
      left: 8%;
      transform: rotate(-10deg);
      z-index: 0;
    }
  }

  /* Bottom Buttons */
  .btn-match {
    background: var(--yellow);
    color: var(--black);
    border: 3px solid var(--black);
    box-shadow: 5px 5px 0 var(--black);
    font-weight: 700;
    transition: all 0.15s ease;
    max-width: 280px;
  }

  .btn-match:active {
    transform: translate(3px, 3px);
    box-shadow: 2px 2px 0 var(--black);
  }

  .btn-match-desc {
    font-size: 0.75rem;
    color: rgba(0,0,0,0.6);
    font-weight: 500;
  }

  @media (min-width: 375px) {
    .btn-quickplay { width: 180px; height: 180px; }
    .btn-quickplay-icon { font-size: 3.5rem; }
    .btn-quickplay-text { font-size: 1rem; }
  }

  @media (min-width: 428px) {
    .btn-quickplay { width: 200px; height: 200px; }
    .btn-quickplay-icon { font-size: 4rem; }
    .btn-quickplay-text { font-size: 1.1rem; }
    .app-title { font-size: 3rem; }
  }
</style>
<% end %>


<div class="bg-blind-test position-relative overflow-hidden d-flex flex-column px-3 py-4">
  
  <!-- Decorative shapes -->
  <div class="shape-1"></div>
  <div class="shape-2"></div>
  <div class="shape-3"></div>

  <!-- Header -->
  <header class="text-center mb-4 position-relative" style="z-index: 1; margin-top: 5rem;">
    <h1 class="app-title mb-2">♪ Musix Box ♫</h1>
    <p class="app-subtitle mb-0">Guess the song, beat your friends</p>
  </header>

  <!-- Main Content -->
  <main class="flex-grow-1 d-flex flex-column justify-content-center align-items-center position-relative" style="z-index: 1;">
    <%= link_to new_session_path(mode: "quickplay"),
        onclick: "localStorage.removeItem('userSelfie')",
        class: "btn-quickplay d-flex flex-column justify-content-center align-items-center text-decoration-none" do %>
      <span class="btn-quickplay-icon">▶</span>
      <span class="btn-quickplay-text">Quickplay</span>
      <span class="btn-quickplay-desc">Solo quick game</span>
    <% end %>
  </main>

  <!-- Bottom Buttons -->
  <nav class="d-flex gap-3 mt-4 position-relative flex-column align-items-center" style="z-index: 1;">
    <%= link_to new_session_path(mode: "match"), class: "btn-match w-100 py-3 rounded-3 text-decoration-none text-center d-flex flex-column align-items-center justify-content-center" do %>
      <span class="d-flex align-items-center gap-2">
        <span>⚔️</span>
        <span class="fw-bold">Match</span>
      </span>
      <span class="btn-match-desc">Play with friends</span>
    <% end %>
  </nav>
</div>
